<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/background">

    <include layout="@layout/toolbar_wego"></include>

    <TextView
        android:id="@+id/tv_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_email_forgot"
        android:layout_alignStart="@+id/edit_email_forgot"
        android:layout_marginBottom="28dp"
        android:text="Enter your email, we will send a new password for you!"
        android:textColor="@color/colorText"
        android:textSize="@dimen/size_text_button" />


    <EditText
        android:id="@+id/edit_email_forgot"
        style="@style/edit_text"
        android:layout_above="@+id/btn_send_email"
        android:layout_alignStart="@+id/btn_send_email"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_edit_text"
        android:hint="@string/your_email"
        android:inputType="textEmailAddress" />


    <Button
        android:id="@+id/btn_send_email"
        style="@style/button_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:text="SEND" />
</RelativeLayout>

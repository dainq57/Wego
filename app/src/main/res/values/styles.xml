<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Custom" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="CheckBox">
        <item name="android:button">@color/colorText</item>
        <item name="android:checkboxStyle">@color/colorText</item>
        <item name="android:checkMark">@color/colorText</item>
    </style>
    <style name="button_activity_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/windowBackground</item>
        <item name="android:textSize">@dimen/size_text_button</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="button_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/windowBackground</item>
        <item name="android:textSize">@dimen/size_text_button</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="button_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/size_text_button</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:padding">@dimen/padding_edit_text</item>
        <item name="android:textColor">@color/colorTextGoogle</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textSize">@dimen/size_text_edit_text</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="edit_text_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_edit_text</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textSize">@dimen/size_text_edit_text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/background_edit_text_top</item>
        <item name="android:layout_marginTop">@dimen/margin_text_edittext</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@color/colorTextHint</item>
    </style>

    <style name="line_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/colorTextHint</item>
    </style>

    <style name="line_edit_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4px</item>
        <item name="android:background">@color/colorTextHint</item>
    </style>

    <style name="line_drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/colorTextHint</item>
    </style>

    <style name="row_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_row</item>
        <item name="android:paddingTop">@dimen/padding_row</item>
    </style>

    <style name="row_edit_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="name_row_profile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_name_row</item>
    </style>

    <style name="name_row_edit_profile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_name_row</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="content_row_profile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_body</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="content_row_edit_profile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_body</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>